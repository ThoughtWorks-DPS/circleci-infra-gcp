{
  "packageRules": [
    {
      "matchSourceUrls": [".*Dockerfile.alpine$"],
      "groupName": "Alpine Dockerfile packages"
    },
    {
      "matchSourceUrls": [".*Dockerfile.slim$"],
      "groupName": "Slim Dockerfile packages"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)([Dd]ocker|[Cc]ontainer)file[^/]*$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sENV .*?_VERSION=\"(?<currentValue>.*)\"\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "extends": [
    "config:recommended",
    ":prHourlyLimitNone",
    ":rebaseStalePrs"
  ]
}
